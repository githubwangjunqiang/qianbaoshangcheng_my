<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--未被选中，且被聚焦 -->

    <item android:drawable="@drawable/btn_check_off" android:state_checked="false"

        android:state_enabled="true" android:state_focused="true"></item>


    <!--未被选中 -->

    <item android:drawable="@drawable/btn_check_off" android:state_checked="false"

        android:state_enabled="true" android:state_window_focused="false"></item>

    <!--未被选中，且被按下-->

    <item android:drawable="@drawable/btn_check_off_pressed" android:state_checked="false"

        android:state_enabled="true" android:state_pressed="true"></item>

    <!--已经选中，且被聚焦-->

    <item android:drawable="@drawable/btn_check_on" android:state_checked="true"

        android:state_enabled="true" android:state_focused="true"></item>

    <!--已经选中 -->

    <item android:drawable="@drawable/btn_check_on" android:state_checked="true"

        android:state_enabled="true" android:state_window_focused="false" />

    <!--已经选中，且被按下-->

    <item android:drawable="@drawable/btn_check_on_pressed" android:state_checked="true"

        android:state_enabled="true" android:state_pressed="true"></item>

</selector>