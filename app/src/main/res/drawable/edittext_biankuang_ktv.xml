<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape>
            <corners android:radius="@dimen/pading_4" />

            <stroke android:width="@dimen/pading_1" android:color="@color/background" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/pading_4" />

            <stroke android:width="@dimen/pading_1" android:color="@color/red" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="@dimen/pading_4" />

            <stroke android:width="@dimen/pading_1" android:color="@color/background" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/pading_4" />

            <stroke android:width="@dimen/pading_1" android:color="@color/blue" />
        </shape>
    </item>

</selector>