<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/pading_4">

    <com.yunyouzhiyuan.qianbaoshangcheng.ui.SquareImageView
        android:id="@+id/itme_xiao_listview_ivimage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/t2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingLeft="@dimen/pading_10">


        <TextView
            android:id="@+id/itme_xiao_listview_tvname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_text_13"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/itme_xiaoi_listview_tvfenshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/pading_2"
            android:paddingTop="@dimen/pading_3"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_text_12"
            tools:text="订单状态，已在线支付" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itme_xiao_listview_tvprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/text_color"
                android:textSize="@dimen/size_text_12"
                tools:text="￥00.00/份" />

            <TextView
                android:id="@+id/itme_xiao_listview_tvyuexiaoliang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/size_text_12"
                tools:text="X0  ,￥00.00元" />

            <TextView
                android:id="@+id/itme_xiaolistview_tvxiajia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yuan_jiedan"
                android:paddingBottom="@dimen/pading_2"
                android:paddingLeft="@dimen/pading_20"
                android:paddingRight="@dimen/pading_20"
                android:paddingTop="@dimen/pading_2"
                android:text="@string/yanzheng"
                android:textColor="@color/app_wr"
                android:textSize="@dimen/size_text_13" />
        </LinearLayout>


        <TextView
            android:id="@+id/itme_xiao_listview_tvdaijinjuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/pading_4"
            android:textColor="@color/app_color"
            android:textSize="@dimen/size_text_12"
            tools:text="顾客手机号:***********" />


    </LinearLayout>
</LinearLayout>