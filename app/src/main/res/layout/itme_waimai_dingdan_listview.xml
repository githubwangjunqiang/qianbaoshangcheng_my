<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:padding="@dimen/pading_4"
    android:orientation="horizontal"
    >

    <com.yunyouzhiyuan.qianbaoshangcheng.ui.SquareImageView
        android:id="@+id/itme_waimai_dingdan_listview_ivc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:src="@drawable/t2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pading_6"
        android:paddingLeft="@dimen/pading_10"
        android:paddingTop="@dimen/pading_6">


        <TextView
            android:id="@+id/itme_waimai_dingdan_listview_tvnamec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_text_12" />


        <TextView
            android:id="@+id/itme_waimai_dingdan_listview_tvpricec"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="￥00.00/份"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_text_12" />


        <TextView
            android:id="@+id/itme_waimai_dingdan_listview_tvnumberc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X0"
            android:textColor="@color/app_color"
            android:textSize="@dimen/size_text_12" />
    </LinearLayout>
</LinearLayout>