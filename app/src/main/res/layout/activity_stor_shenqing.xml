<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/pading_10"
        android:text="@string/stor_shenqing_top"
        android:textColor="@color/text_color"
        android:textSize="@dimen/size_text_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pading_4"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/pading_6"
        android:paddingLeft="@dimen/pading_20"
        android:paddingRight="@dimen/pading_20"
        android:paddingTop="@dimen/pading_6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/stor1"
            android:gravity="center_horizontal|bottom"
            android:text="@string/stor_shenqing_top1"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_text_12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/stor2"
            android:gravity="center_horizontal|bottom"
            android:text="@string/stor_shenqing_top2"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_text_12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/stor3"
            android:gravity="center_horizontal|bottom"
            android:text="@string/stor_shenqing_top3"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_text_12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/stor4"
            android:gravity="center_horizontal|bottom"
            android:text="@string/stor_shenqing_top4"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_text_12" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/pading_10"
        android:text="@string/stor_shenqing_top"
        android:textColor="@color/text_color"
        android:textSize="@dimen/size_text_14" />

    <com.baoyz.widget.PullRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:refreshType="ring"
        android:background="@color/white">

        <GridView
            android:id="@+id/activity_stor_shenqing_gv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="@dimen/pading_10"
            android:numColumns="2"
            android:padding="@dimen/pading_10"
            android:verticalSpacing="@dimen/pading_10"></GridView>

    </com.baoyz.widget.PullRefreshLayout>
<TextView
    android:id="@+id/activity_shenqing_stor_tvbtn"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_height"
    android:textColor="@color/white"
    android:textSize="@dimen/size_text_14"
    android:gravity="center"
    android:background="@color/app_color"
    android:text="@string/stor_shenqing_buttom"/>
</LinearLayout>
