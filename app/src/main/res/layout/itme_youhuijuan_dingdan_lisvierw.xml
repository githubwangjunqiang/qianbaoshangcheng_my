<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/pading_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.yunyouzhiyuan.qianbaoshangcheng.ui.SquareImageView
            android:id="@+id/itme_youhuijuan_dingdan_listview_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:src="@drawable/t2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pading_4"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="@dimen/pading_4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itme_youhuijuan_dingdan_listview_tvuser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/size_text_14"
                    tools:text="用户电话：15000000000" />

                <TextView
                    android:id="@+id/itme_youhuijuan_dingdan_listview_tvcall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tvboda"
                    android:text="@string/boda"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/size_text_13" />

            </LinearLayout>


            <TextView
                android:id="@+id/itme_youhuijuan_dingdan_listview_tvname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_color_alp"
                android:textSize="@dimen/size_text_13"
                tools:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称" />

            <TextView
                android:id="@+id/itme_youhuijuan_dingdan_listview_tvtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"

                android:textSize="@dimen/size_text_13"
                tools:text="期限：2000-00-00至00-00" />
        </LinearLayout>

        <TextView
            android:id="@+id/itme_youhuijuan_dingdan_listview_tvprice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/yuan_youhuijuan"
            android:gravity="center"
            android:paddingLeft="@dimen/pading_4"
            android:paddingRight="@dimen/pading_10"
            android:textColor="@color/white"
            android:textSize="@dimen/size_text_12"
            tools:text="￥00" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/pading_0.5"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/youhuiquandingdan_tvfenshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/pading_6"
            tools:text="客户评分5分"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_text_13" />

        <RatingBar
            android:id="@+id/youhuiquan_bar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:rating="3" />

        <View
            android:layout_width="@dimen/pading_0.5"
            android:layout_height="match_parent"
            android:background="@color/background" />

        <TextView
            android:id="@+id/youhuiquandingdan_tvbtnpingjia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/pading_6"
            android:text="@string/chakanpingjia"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_text_14" />
    </LinearLayout>


</LinearLayout>