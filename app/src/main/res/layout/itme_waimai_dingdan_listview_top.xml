<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/pading_6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:padding="@dimen/pading_6"
        android:text="@string/dingdanxiangqing"
        android:textColor="@color/text_color"
        android:textSize="@dimen/size_text_12" />

    <TextView
        android:id="@+id/itme_waimai_dingdantvname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pading_6"
        android:text="@string/yonghunicheng"
        android:textColor="@color/text_color"
        android:textSize="@dimen/size_text_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itme_waimai_dingdan_listview_tvphone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/pading_6"
            android:text="@string/kehudianhua"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_text_12" />

        <TextView
            android:id="@+id/itme_waimai_dingdan_listview_tvbtnphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yuan_jiedan"
            android:gravity="center"
            android:paddingBottom="@dimen/pading_2"
            android:paddingLeft="@dimen/pading_20"
            android:paddingRight="@dimen/pading_20"
            android:paddingTop="@dimen/pading_2"
            android:text="@string/boda"
            android:textColor="@color/app_color"
            android:textSize="@dimen/size_text_12" />
    </LinearLayout>


    <TextView
        android:id="@+id/itme_waimai_dingdan_listview_tvtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/pading_6"
        android:text="订单添加时间"
        android:textColor="@color/text_color"
        android:textSize="@dimen/size_text_12" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/pading_1"
        android:background="@color/background" />

    <com.yunyouzhiyuan.qianbaoshangcheng.ui.MyListview
        android:id="@+id/itme_waimai_dingdan_listview_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/pading_1"
        android:background="@color/background" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itme_waimai_dingdan_listview_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/pading_6"
            android:text="订单总价"
            android:textColor="@color/red"
            android:textSize="@dimen/size_text_13" />
        <TextView
            android:id="@+id/itme_waimai_dingdan_listview_tvbtnpatui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yuan_paotui"
            android:gravity="center"
            android:visibility="gone"
            android:paddingBottom="@dimen/pading_2"
            android:paddingLeft="@dimen/pading_16"
            android:paddingRight="@dimen/pading_16"
            android:paddingTop="@dimen/pading_2"
            android:layout_marginRight="@dimen/pading_10"
            android:text="@string/fabupaotui"
            android:textColor="@color/blue_p"
            android:textSize="@dimen/size_text_12" />
        <TextView
            android:id="@+id/itme_waimai_dingdan_listview_tvbtnjiedanc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yuan_jiedan"
            android:gravity="center"
            android:paddingBottom="@dimen/pading_2"
            android:paddingLeft="@dimen/pading_16"
            android:paddingRight="@dimen/pading_16"
            android:paddingTop="@dimen/pading_2"
            android:text="@string/jiedan"
            android:textColor="@color/app_color"
            android:textSize="@dimen/size_text_12" />

    </LinearLayout>

</LinearLayout>