<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/pading_10"
        android:text="2000.00.00.00"
        android:textColor="@color/text_color_alp"
        android:textSize="@dimen/size_text_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/pading_10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tongzhi1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pading_20"
            android:layout_marginRight="@dimen/pading_40"
            android:background="@drawable/yuan_dialog"
            android:orientation="vertical"
            >

            <TextView
                android:padding="@dimen/pading_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新订单 ：     付款状态  ：已在线支付"
                android:textColor="@color/text_color"
                android:textSize="@dimen/size_text_14" />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/size_text_12"
                android:textColor="@color/text_color"
                android:text="商品名称，内容  数量X1"
                android:padding="@dimen/pading_10"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/size_text_12"
                android:textColor="@color/text_color"
                android:text="收货地址：地址地址地址"
                android:padding="@dimen/pading_10"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/size_text_12"
                android:textColor="@color/text_color"
                android:text="联系人：姓名"
                android:padding="@dimen/pading_10"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/size_text_12"
                android:textColor="@color/text_color"
                android:text="联系电话：88888888"
                android:padding="@dimen/pading_10"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/size_text_12"
                android:textColor="@color/text_color_alp"
                android:text="2000-00-00-00-00"
                android:padding="@dimen/pading_10"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
