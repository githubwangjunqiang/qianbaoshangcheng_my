<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/pading_6">

    <com.yunyouzhiyuan.qianbaoshangcheng.ui.SquareImageView
        android:id="@+id/itme_shoping_gaunzli_listview_ivimage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/t2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingLeft="@dimen/pading_10"
        android:paddingTop="@dimen/pading_6">

        <TextView
            android:id="@+id/itme_shoping_gaunzli_listview_tvname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/text_color"
            android:textSize="@dimen/size_text_12" />


        <TextView
            android:id="@+id/itme_shoping_gaunzli_listview_tvprice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="￥00.00/份"
            android:textColor="@color/text_color_alp"
            android:textSize="@dimen/size_text_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itme_shoping_gaunzli_listview_tvyuexiaoliang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/lihai"
                android:gravity="center_vertical"
                android:text="月销量"
                android:textColor="@color/text_color_alp"
                android:textSize="@dimen/size_text_12" />

            <TextView
                android:id="@+id/itme_shoping_gaunzli_listview_tvxiajia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yuan_jiedan"
                android:paddingBottom="@dimen/pading_2"
                android:paddingLeft="@dimen/pading_20"
                android:paddingRight="@dimen/pading_20"
                android:paddingTop="@dimen/pading_2"
                android:text="@string/xiajia"
                android:textColor="@color/text_app_write_color_p"
                android:textSize="@dimen/size_text_12" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>