<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/pading_20"
        android:paddingRight="@dimen/pading_20"
        android:paddingTop="@dimen/pading_10">

        <ImageView
            android:id="@+id/activity_stor_info_iv1"
            android:layout_width="0dp"
            android:layout_height="@dimen/pading_16"
            android:layout_weight="1"
            android:src="@drawable/stor_shen_info_tap_1" />

        <ImageView
            android:id="@+id/activity_stor_info_iv2"
            android:layout_width="0dp"
            android:layout_height="@dimen/pading_16"
            android:layout_weight="1"
            android:src="@drawable/stor_shen_info_tap_2" />

        <ImageView
            android:id="@+id/activity_stor_info_iv3"
            android:layout_width="0dp"
            android:layout_height="@dimen/pading_16"
            android:layout_weight="1"
            android:src="@drawable/stor_shen_info_tap_3" />

        <ImageView
            android:id="@+id/activity_stor_info_iv4"
            android:layout_width="0dp"
            android:layout_height="@dimen/pading_16"
            android:layout_weight="1"
            android:src="@drawable/stor_shen_info_tap_4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pading_4"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/pading_6"
        android:paddingLeft="@dimen/pading_20"
        android:paddingRight="@dimen/pading_20"
        android:paddingTop="@dimen/pading_6">

        <TextView
            android:id="@+id/activity_stor_info_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:text="@string/stor_shenqing_top1"
            android:textColor="@color/text_app_color"
            android:textSize="@dimen/size_text_12" />

        <TextView
            android:id="@+id/activity_stor_info_tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:text="@string/stor_shenqing_top2"
            android:textColor="@color/text_app_color"
            android:textSize="@dimen/size_text_12" />

        <TextView
            android:id="@+id/activity_stor_info_tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:text="@string/stor_shenqing_top3"
            android:textColor="@color/text_app_color"
            android:textSize="@dimen/size_text_12" />

        <TextView
            android:id="@+id/activity_stor_info_tv4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:text="@string/stor_shenqing_top4"
            android:textColor="@color/text_app_color"
            android:textSize="@dimen/size_text_12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_stor_info_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>
